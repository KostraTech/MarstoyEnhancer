{
  "manifest_version": 3,
  "name": "Marstoy Enhancer",
  "version": "1.1.0",
    "description": "Enhances marstoy.com by syncing LEGO data from Rebrickable, improving product images and titles, and adding an integrated ME Search tool.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://marstoy.com/*",
    "https://rebrickable.com/*",
    "https://cdn.rebrickable.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://marstoy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
